#!make -f

CXX=clang++
CXXFLAGS=-std=c++2a

.PHONY: all
all: Prog

Prog: Prog.cpp snowman.o Board.o
	$(CXX) $(CXXFLAGS) Prog.cpp 
	./Prog

snowman.o: snowman.cpp snowman.hpp
	$(CXX) $(CXXFLAGS) -c snowman.cpp -o snowman.o

Board.o: Board.cpp Board.hpp Direction.hpp
	$(CXX) $(CXXFLAGS) -c Board.cpp -o Board.o

.PHONY: clean
clean:
	rm -f test Board main *.o Student*